# Media Manager â€” example environment overrides

# Human-readable upload max size for images (server validation)
MEDIA_MAX_FILE_SIZE=5MB

# Enforce Spatie role-based directory permissions
MEDIA_ENFORCE_SPATIE=false

# Storage disk for media (usually `public` or an S3 disk alias)
MEDIA_DISK=public

# Thumbnail safety limits
# Skip thumbnail generation when decoded pixels exceed this count
MEDIA_THUMB_MAX_PIXELS=40000000
# Skip thumbnail generation when original file size exceeds this many bytes
# You can also use a human string in config; env here must be a number of bytes
MEDIA_THUMB_MAX_SIZE=20971520
